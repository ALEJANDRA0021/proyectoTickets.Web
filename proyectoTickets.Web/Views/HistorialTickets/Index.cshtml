@model IEnumerable<proyectoTickets.Web.Models.HistorialTicket>

@{
    ViewData["Title"] = "Historial de Tickets";
}

<h1>Historial de Tickets</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ticket ID</th>
            <th>Estado</th>
            <th>Fecha</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.HistorialId)</td>
                <td>@Html.DisplayFor(modelItem => item.TicketId)</td>
                <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.HistorialId" class="btn btn-info">Detalles</a>
                </td>
            </tr>
        }
    </tbody>
</table>