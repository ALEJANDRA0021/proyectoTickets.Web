@model IEnumerable<proyectoTickets.Web.Models.Ticket>

@{
    ViewData["Title"] = "Tickets";
}

<h1>Tickets</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Título</th>
            <th>Estado</th>
            <th>Prioridad</th>
            <th>Fecha Creación</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.TicketId)</td>
                <td>@Html.DisplayFor(modelItem => item.Titulo)</td>
                <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                <td>@Html.DisplayFor(modelItem => item.Prioridad)</td>
                <td>@Html.DisplayFor(modelItem => item.FechaCreacion)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TicketId" class="btn btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.TicketId" class="btn btn-info">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.TicketId" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>